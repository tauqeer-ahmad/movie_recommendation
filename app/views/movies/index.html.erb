<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.display_year %></td>
    <td><%= link_to 'Show', [@user, movie] %></td>
    <td><%= link_to 'Edit', edit_user_movie_path(@user, movie) %></td>
    <td><%= link_to 'Destroy', [@user, movie], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
